<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dileber.gold.alipaygold.goldmbp.setting.SettingFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_notifications_black_24dp"
                    />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    tools:text="NAME"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/dileber_line"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:padding="6dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_notifications_black_24dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color333333"
                    android:textSize="15sp"
                    android:text="收费服务：每天定时12：00发送邮件，行情分析邮件。行情好的时候发送提醒邮件。"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color333333"
                    android:textSize="15sp"
                    android:text="支付宝5元一月，转账备注：用户账号，开通时长"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:layout_marginTop="4dp"
                    android:src="@mipmap/img_money"
                    />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blue_rect"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/btn"
                    android:text="保存二维码到相册"
                    />


            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>




</LinearLayout>
